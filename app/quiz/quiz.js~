var ES = require("ES");

class QuizController extends ES.Controller {
    constructor(el) {
	super(el);

	ES.filter(this.children, "input").on("click", this.inputChanged);
						
    }
    inputChanged(el) {
	if(el.value = el.dataset.answer) {
	    el.classList.add("valid");
	} else {
	    el.classList.add("invalid");
	}
    }
}

document.register("x-quiz", QuizController);
