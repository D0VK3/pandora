<!DOCTYPE html>
<html>
  <head>
    <title>New Subject</title>
    <style src="./subject.scss"></style>
    <style src="app/header/head.scss"></style>
  </head>
  <body>
    {>"app/header/head.dust"/}
    <main>
      <article>
	<h2>New Subject</h2>
	<form action="/subjects/nova" method="post">
	  <label>Name</label>
	  <input type="text" name="name" placeholder="e.g. 9z/Sc1" aria-required="true" required/>
	  <label>Subject Name</label>
	  <select name="subject_name" aria-required="true" required>
	    {#subjects}
	      <option value="{.}">{.}</option>
	    {/subjects}
	  </select>
	  <label>Teacher</label>
	  <select name="teacher" aria-required="true" required>
	    {#teachers}
	      <option value="{_id}">{username}</option>
	    {/teachers}
	  </select>
	  <button type="submit">Create</button>
	</form>
      </article>
    </main>
  </body>
</html>
